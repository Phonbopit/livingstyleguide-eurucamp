%ul.speaker-details(id="#{speaker['anchor']}")
  .speaker-details--avatar
    = style_template "speaker-avatar", speaker: speaker, image_dir: image_dir, show_flags: true, show_social: true
  .speakers-details--info
    - if speaker['bio'].present?
      .speakers-details--info-bio
        = md2html(speaker['bio'] || '')
    .speakers-details--info-talk-title
      %h3
        = speaker['talk_title']
    .speakers-details--info-talk-abstract
      = md2html(speaker['talk_summary'] || '')
