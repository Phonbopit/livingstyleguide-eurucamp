.speakers
  .speakers--container
    %h1.speakers--title Meet our Speakers
    %ul.speaker-details-list
      %li.speaker-details-list--item.keynote
        = style_template "speaker-details", speaker: keynote, image_dir: image_dir, right: false
      - speakers.each_with_index do |speaker, index|
        %li.speaker-details-list--item
          = style_template "speaker-details", speaker: speaker, image_dir: image_dir, right: index.even?
