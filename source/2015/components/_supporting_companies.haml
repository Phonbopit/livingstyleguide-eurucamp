%section.supporters
  .supporters--container
    %h1.supporters--title Supporting Companies
    %ul.supporters--list
      - supporting_companies.each do |company|
        %li.supporters--list-item
          - if company[:url]
            %a{ href: company[:url], title: "Website for #{company[:company]}"}
              = style_template 'supporting_company_line', company: company
          - else
            = style_template 'supporting_company_line', company: company
